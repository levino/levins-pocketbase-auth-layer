{
  "name": "@levino/pocketbase-auth",
  "version": "1.0.11",
  "description": "PocketBase authentication middleware for edge runtimes (Cloudflare Pages/Workers) and Node.js",
  "type": "module",
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts"
  },
  "files": [
    "index.ts"
  ],
  "scripts": {
    "start": "node --experimental-strip-types app.ts",
    "test": "vitest",
    "postinstall": "allow-scripts"
  },
  "keywords": [
    "pocketbase",
    "auth",
    "middleware",
    "cloudflare",
    "workers",
    "pages",
    "edge",
    "authentication",
    "oauth"
  ],
  "author": "Levin Keller",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/levino/levins-pocketbase-auth-layer.git"
  },
  "bugs": {
    "url": "https://github.com/levino/levins-pocketbase-auth-layer/issues"
  },
  "homepage": "https://github.com/levino/levins-pocketbase-auth-layer#readme",
  "dependencies": {
    "pocketbase": "^0.26"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@lavamoat/allow-scripts": "^3.4.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/supertest": "^6.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": false,
      "vitest>vite>esbuild": true
    }
  }
}
